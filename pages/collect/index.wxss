.collect .warp {
  background-color: #edece8;
  min-height: 100vh;
}
.collect .warp .tips {
  display: flex;
  border-top: 1rpx solid #ccc;
  padding: 20rpx;
}
.collect .warp .tips > view {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10rpx;
  margin-right: 20rpx;
  border: 1rpx solid #ccc;
  background-color: #fff;
}
.collect .warp .tips > view:nth-child(1) {
  color: var(--themeColor);
  border: 1rpx solid var(--themeColor);
}
.collect .warp .goods_warp {
  display: flex;
  background-color: #fff;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
}
.collect .warp .goods_warp .left {
  flex: 2;
}
.collect .warp .goods_warp .left image {
  width: 100%;
}
.collect .warp .goods_warp .right {
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.collect .warp .goods_warp .right > view:nth-child(1) {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.collect .warp .goods_warp .right > view:nth-child(2) {
  color: var(--themeColor);
  font-weight: bold;
}
